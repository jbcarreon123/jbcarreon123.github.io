---
import "../styles/global.css";
import "../styles/landing.css";
import { ClientRouter } from "astro:transitions";
import { version } from "../../package.json";
import { Image } from "astro:assets";

const { title, id, description } = Astro.props;
const { url, site } = Astro;
import { OgImage } from "astro-opengraph-image/components";
import CommonHead from "../components/CommonHead.astro";
import Windows from "../components/Windows.astro";

const ogImage = url
    .toString()
    .replace("/posts/", "/post-og/")
    .replace(/\/$/, "");
---

<!doctype html>
<html lang="en" class="inter" data-color="dark">
    <head>
        <CommonHead title={title} id={id} description={description} />

        <style>
            * {
                --altbg: #000;
                --acc: #000;
                --text: #19b30b;

                font-family: "Commit Mono", monospace;
            }

            .cont-btm {
                height: 100%;
                width: 100%;
                display: flex;
                flex-direction: row;
                align-items: end;
                justify-content: space-between;

                & > div {
                    padding: 24px;

                    & > * {
                        padding: 0;
                        margin: 0;
                    }

                    h1 {
                        font-size: 5em;
                    }
                }
            }

            .cont {
                width: 100%;
                height: 100%;
            }

            .cont:before {
                content: " ";
                display: block;
                position: absolute;
                top: 0;
                left: 0;
                bottom: 0;
                right: 0;
                background: linear-gradient(
                    to bottom,
                    rgba(18, 16, 16, 0) 50%,
                    rgba(0, 0, 0, 0.25) 50%
                );
                background-size: 100% 8px;
                z-index: 2;
                pointer-events: none;
            }

            .scanline {
                width: 100%;
                height: 100%;
                z-index: 8;
                background: linear-gradient(
                    0deg,
                    rgba(0, 0, 0, 0) 0%,
                    rgba(255, 255, 255, 0.2) 10%,
                    rgba(0, 0, 0, 0.1) 100%
                );
                opacity: 0.1;
                position: fixed;
                top: 0;
                left: 0;
                animation: scanline 10s linear infinite;
                pointer-events: none;
            }

            @keyframes scanline {
                0% {
                    bottom: 100%;
                }
                80% {
                    bottom: 100%;
                }
                100% {
                    bottom: 0%;
                }
            }
        </style>
    </head>
    <body transition:animate="fade">
        <div class="cont">
            <div class="scanline"></div>
            <div class="cont-btm">
                <div class="left">
                    <h1>16+1</h1>
                    <i>jb's 17th birthday special page</i>
                </div>
                <div class="right">
                    <h1 id="timer"></h1>
                </div>
            </div>
        </div>

        <script>
            var countDownDate = new Date("2025-05-01T16:00:00.000Z").getTime();

            var x = setInterval(function () {
                var now = new Date().getTime();
                var distance = countDownDate - now;
                var days = Math.floor(distance / (1000 * 60 * 60 * 24));
                var hours = Math.floor(
                    (distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60),
                );
                var minutes = Math.floor(
                    (distance % (1000 * 60 * 60)) / (1000 * 60),
                );
                var seconds = Math.floor((distance % (1000 * 60)) / 1000);
                document.getElementById("timer").innerHTML =
                    hours + "h " + minutes + "m " + seconds + "s ";
                if (distance < 0) {
                    clearInterval(x);
                }
            }, 1000);
        </script>
    </body>
</html>
