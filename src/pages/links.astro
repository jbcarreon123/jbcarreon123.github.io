---
import Layout from '../layouts/Layout.astro';
import Buttons from '../components/SiteButtons.astro'
import { Code } from 'astro-expressive-code/components';
// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.

const sitebtns = [
    '<a href="https://jbcarreon123.nekoweb.org"><img src="https://jbcarreon123.nekoweb.org/imgs/buttons/jbtn.svg" alt="jb\'s site" style="image-rendering: pixelated;"/> <img src="https://jbcarreon123.nekoweb.org/imgs/buttons/jbtn.gif" alt="jb\'s site" style="image-rendering: pixelated;"/> <img src="https://jbcarreon123.nekoweb.org/imgs/buttons/jbtn.png" alt="jb\'s site" style="image-rendering: pixelated;"/></a>',
    '<a href="https://jbcarreon123.nekoweb.org"><img src="https://jbcarreon123.nekoweb.org/sitebutton2.png" alt="jb\'s site" style="image-rendering: pixelated;"/></a>',
];

const oldsitebtns = [
    '<a href="https://jbcarreon123.nekoweb.org"><img src="https://jbcarreon123.nekoweb.org/sitebutton.png" alt="jb\'s site" style="image-rendering: pixelated;"/></a>',
    '<a href="https://jbcarreon123.nekoweb.org"><img src="https://jbcarreon123.nekoweb.org/sitebuttonv2.png" alt="jb\'s site" style="image-rendering: pixelated;"/></a>',
]
---

<Layout title="Links" id="links" description="other links">
    <h1>Links</h1>
    <p>Links to other sites, webrings, and more!</p>
    <p>Note that this might get laggy as this contains a lot of JS.</p>

    <h2>My buttons (hotlink ok!)</h2>
    <p>jbSite4 and neutral styled buttons</p>
    <div id="webrings">
        {sitebtns.map((btn) => <div>
            <div set:html={btn}></div>
            <Code code={btn} lang="html" />
        </div>)}
    </div>
    <p>jbSite3 styled buttons</p>
    <div id="webrings">
        {oldsitebtns.map((btn) => <div>
            <div set:html={btn}></div>
            <Code code={btn} lang="html" />
        </div>)}
    </div>

    <h2>Other sites</h2>
    <p>This is loaded from a JSON file, so you can just fetch /buttons.json if you want lol</p>
    <Buttons />

    <h2>Cliques</h2>
    <p>soon...</p>

    <h2>...links</h2>
    <div id="linksiframe">
        <div>
            <div>
                <iframe
                    title="nekolink"
                    loading="lazy"
                    style="border:none;"
                    src="https://rubybulbs.net/neko.html"
                ></iframe>
            </div>
        </div>
        <div>
            <div>
                <iframe style="border:none" class="aspect-square max-h-2xs w-full max-w-2xs" src="https://dimden.neocities.org/navlink/" title="neolink"></iframe>
            </div>
        </div>
        <div>
            <div>
                <iframe style="border:none" src="https://evehibi.nekoweb.org/ringlink/" name="ringlink"></iframe>
            </div>
        </div>
    </div>

    <style is:inline>
        #linksiframe {
            display: grid;
            grid-template-columns: repeat(3, minmax(100px, 1fr));
            gap: 6px;
        }

        iframe {
            width: 100% !important;
        }

        #linksiframe > div {
            background-color: var(--acc);
            padding: 12px;
        }

        #linksiframe iframe {
            aspect-ratio: 1/1;
            width: 100%;
        }

        #linksiframe div div {
            margin: 0 auto;
            text-align: center;
        }

        @media (width <= 640px) {
            #linksiframe {
                grid-template-columns: repeat(1, minmax(100px, 1fr));
            }
            
            #linksiframe iframe {
                width: clamp(60px, 100%, 256px);
            }
        }
    </style>
</Layout>