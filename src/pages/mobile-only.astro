---
import Layout from '../layouts/LayoutNoSidebar.astro';
import CommentWidget from '../components/CommentWidget.svelte';
import '../styles/post.css';
import '../styles/comment-widget-dark.css';
import MobileOnly from './mobile-only-src.md';
---

<Layout title="A Mobile-only page" description="Jb's manifesto about mobile responsiveness">
    <div class="mo">
        <h1 class="post-title">A mobile-only page</h1>
        <article>
            <MobileOnly />
        </article>
        <div style="width: 100%;">
            <CommentWidget client:only="svelte" disabled={false} />
        </div>
    </div>
    <div class="do">
        <h1>Don't be a desktop chump! Get a phone!</h1>
        <p>This page is only viewable on phones (on purpose).</p>
    </div>
    <style slot="head" is:global>
        div.do {
            display: none;
        }

        @media screen and (width > 640px) {
            div.mo {
                display: none;
            }

            div.do {
                display: block;
            }
        }
    </style>
</Layout>