---
import Layout from "../../layouts/BgOnlyLayout.astro";
import { Image } from "astro:assets";
---

<Layout title="Behind the Nekoweb" id="btn">
    <a class="home" href="/">go home?</a>
    <div class="c">
        <div>
            <h1 class="big">Behind the Nekoweb</h1>
            <p>These are the interviews on it's raw. Enjoy it!</p>
        </div>
        <div class="entries">
            <h2 class="main">Nekozine #1</h2>
            <div>
                <a>
                    <div
                        class="behind"
                        style="--img: url(/imgs/btn/nwiki_bg.svg)"
                    >
                    </div>
                    <div>
                        <img
                            src="/imgs/btn/nekoweb_wiki_img.png"
                            alt="Image that says 'Nekoweb Wiki' on it"
                        />
                    </div>
                </a>
                <a>
                    <div
                        class="behind"
                        style="--img: url(https://nekoweb.org/static/assets/nekopattern.png); background-size: initial;"
                    >
                    </div>
                    <div>
                        <h2>Nekoweb Districts</h2>
                    </div>
                </a>
                <a>
                    <div
                        class="behind"
                        style="--img: url(/imgs/btn/ivrry_stars.png); animation: scroll-bg 20s linear 0s forwards infinite;"
                    >
                    </div>
                    <div>
                        <img
                            src="/imgs/btn/ivrry_title.gif"
                            style="--h: 60px;"
                            alt="Image that says 'ivrry.nekoweb.org' on it"
                        />
                    </div>
                </a>
                <a class="crt" style="text-decoration: none;">
                    <div
                        class="behind"
                        style="--img: url(/imgs/btn/july_background.png);"
                    >
                    </div>
                    <div>
                        <h2 class="j">july.lol</h2>
                    </div>
                </a>
            </div>
        </div>
        <div class="entries">
            <h2 class="main">Nekozine #2</h2>
            <div>
                <a>
                    <h2>TBA</h2>
                </a>
                <a>
                    <h2>TBA</h2>
                </a>
                <a>
                    <h2>TBA</h2>
                </a>
                <a>
                    <h2>TBA</h2>
                </a>
            </div>
        </div>
    </div>

    <style slot="head">
        @font-face {
            font-family: "HerculesOutline";
            src: url("/fonts/btn/HerculesPixelFont-Outline.woff") format("woff");
            font-weight: normal;
            font-style: normal;
            font-display: swap;
        }

        .j {
            font-family: "HerculesOutline";
            font-size: 50px;
            font-style: italic;
            font-synthesis: style;
            text-decoration: none !important;
            color: var(--green-color);
            z-index: 10;
            white-space: nowrap;
            pointer-events: none;
            text-shadow:
                0 0 10px var(--green-color),
                0 0 20px var(--green-color),
                0 0 30px var(--green-color);

            --green-color: #73F3BB;
        }

        .c {
            width: 100vw;
            height: 100vh;
            padding: 12px;
            max-width: 1200px;
            margin-inline: auto;
        }

        h1.big {
            font-size: 3.5em;
        }

        * {
            padding: 0;
        }

        a.home {
            z-index: 3;
            padding: 6px;
            background: var(--acc);
            position: absolute;
            left: 6px;
            top: 6px;
            opacity: 0.35;
        }

        a.home:hover,
        a.home:active {
            opacity: 1;
        }

        div.entries {
            margin-block: 18px;
            display: flex;
            flex-direction: row;
            padding: 6px;
            background: var(--acc);
            min-height: 250px;

            & > h2.main {
                writing-mode: sideways-lr;
                padding-bottom: 6px;
            }

            & > div {
                display: grid;
                grid-template-columns: repeat(2, minmax(100px, 1fr));
                width: 100%;
                padding: 6px;
                gap: 6px;

                & > a {
                    background-color: var(--bg);
                    padding: 6px;
                    position: relative;

                    & > .behind {
                        position: absolute;
                        top: 0;
                        left: 0;
                        background-image: var(--img);
                        width: 100%;
                        opacity: 0.3;
                        background-size: contain;
                        background-position-y: bottom;
                    }

                    & > div {
                        position: relative;
                        display: flex;
                        height: 100%;
                        align-items: end;
                        & > img {
                            height: var(--h, 50px);
                        }
                    }

                    &:hover {
                        & > .behind {
                            opacity: 0.75;
                        }
                    }
                }

                @media screen and (width <= 850px) {
                    grid-template-columns: 1fr;

                    & > a {
                        height: 100px;

                        &>div>img {
                            width: 75vw;
                            object-fit: contain;
                            object-position: bottom left;
                        }
                    }
                }
            }
        }

        @keyframes scroll-bg {
            from {
                background-position: 0px 0px;
            }
            to {
                background-position: 304px 234px;
            }
        }

        .crt::after {
            content: " ";
            display: block;
            background: rgba(18, 16, 16, 0.1);
            opacity: 0;
            z-index: 2;
            pointer-events: none;
            animation: flicker 0.15s infinite;
            width: 100%;
            height: 100%;
            position: absolute;
            inset: 0;
        }
        .crt::before {
            content: " ";
            display: block;
            width: 100%;
            height: 100%;
            position: absolute;
            inset: 0;
            background: linear-gradient(
                    rgba(18, 16, 16, 0) 50%,
                    rgba(0, 0, 0, 0.25) 50%
                ),
                linear-gradient(
                    90deg,
                    rgba(255, 0, 0, 0.06),
                    rgba(0, 255, 0, 0.02),
                    rgba(0, 0, 255, 0.06)
                );
            background-size: auto, auto;
            z-index: 9999;
            background-size:
                100% 2px,
                3px 100%;
            pointer-events: none;
        }

        @keyframes flicker {
            0% {
                opacity: 0.27861;
            }
            5% {
                opacity: 0.34769;
            }
            10% {
                opacity: 0.23604;
            }
            15% {
                opacity: 0.90626;
            }
            20% {
                opacity: 0.18128;
            }
            25% {
                opacity: 0.83891;
            }
            30% {
                opacity: 0.65583;
            }
            35% {
                opacity: 0.67807;
            }
            40% {
                opacity: 0.26559;
            }
            45% {
                opacity: 0.84693;
            }
            50% {
                opacity: 0.96019;
            }
            55% {
                opacity: 0.08594;
            }
            60% {
                opacity: 0.20313;
            }
            65% {
                opacity: 0.71988;
            }
            70% {
                opacity: 0.53455;
            }
            75% {
                opacity: 0.37288;
            }
            80% {
                opacity: 0.71428;
            }
            85% {
                opacity: 0.70419;
            }
            90% {
                opacity: 0.7003;
            }
            95% {
                opacity: 0.36108;
            }
            100% {
                opacity: 0.24387;
            }
        }
    </style>
</Layout>
